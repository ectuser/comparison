{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@product-comparison/api": ["libs/api/src/index.ts"],
      "@product-comparison/container": ["libs/container/src/index.ts"],
      "@product-comparison/product-core": ["libs/product-core/src/index.ts"],
      "@product-comparison/product-state": ["libs/product-state/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
